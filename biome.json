{
  "$schema": "https://biomejs.dev/schemas/1.5.1/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "rules": {
      "correctness": {
        "noUnusedVariables": {
          "level": "warn"
        }
      },
      "style": {
        "useConst": {
          "level": "warn"
        },
        "useTemplate": {
          "level": "warn"
        }
      }
    }
  },
  "formatter": {
    "indentWidth": 2
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    }
  }
}
